<div class="user-show">
  <div class="user">
    <h2>ユーザー名</h2>
    <p><%= @user.name %></p>
    <img src="<%= @user.image %>">
    <h2>メールアドレス</h2>
    <p><%= @user.email %></p>
    <% if @user.id == @current_user.id %>
      <a href="/users/<%= @current_user.id %>/edit">プロフィールの編集</a>
      <a href="/users/<%= @current_user.id %>/edit_password">パスワードの変更</a>
    <% end %>
  </div>

  <ul class="user-menus">
    <li><a href="/users/<%= @user.id %>">投稿</a></li>
    <li class="active"><a href="/users/<%= @user.id %>/likes">いいね</a></li>
  </ul>

  <div class="posts-index">
    <% @likes.each do |like| %>
      <% post = like.post %>
      <% user = post.user %>
      <div class="posts-index-item">
        <div class="post-left"><img src="<%= user.image %>"></div>
        <div class="post-right">
          <div class="post-user-name">
            <a href="/users/<%= user.id %>">
              <%= user.name %>
            </a>
          </div>
          <a href="/posts/<%= post.id %>">
            <%= post.content %>
          </a>
        </div>
      </div>
    <% end %>
  </div>

</div>
